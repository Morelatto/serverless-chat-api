# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
API_KEYS=dev-key-123,test-key-456
REQUIRE_API_KEY=false

# LLM Configuration
LLM_PROVIDER=gemini
LLM_FALLBACK=true
GEMINI_API_KEY=
OPENROUTER_API_KEY=
OPENROUTER_MODEL=google/gemma-7b-it:free

# Database Configuration
DATABASE_PATH=chat_history.db
DYNAMODB_TABLE=chat-interactions

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=simple

# Feature Flags
ENABLE_METRICS=true
ENABLE_TRACING=false
